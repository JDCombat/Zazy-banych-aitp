        <Label x:Name="lAge" Content="Wiek" HorizontalAlignment="Left" Margin="24,119,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbAge" HorizontalAlignment="Left" Height="26" Margin="106,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
        <Button x:Name="bCancel" Content="Cancel" HorizontalAlignment="Left" Height="25" Margin="24,241,0,0" VerticalAlignment="Top" Width="111" Click="bCancel_Click"/>
        <Button x:Name="bSave" Content="Save" HorizontalAlignment="Left" Height="25" Margin="163,241,0,0" VerticalAlignment="Top" Width="111" Click="bSave_Click"/>

    </Grid>
</Window>
